{
  "exclude": ["node_modules"],
  "include": ["types.d.ts"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "outDir": "./dist/",
    "paths": {
      "@types/assets*": ["assets/*"]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
}
